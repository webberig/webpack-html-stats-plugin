{
  "name": "webpack-html-stats-plugin",
  "version": "1.1.1",
  "description": "Generate a static HTML report from webpack stats during build",
  "main": "index.js",
  "scripts": {
    "lint": "eslint lib/",
    "test": "nyc ava lib/*-spec.js",
    "test:watch": "ava lib/*-spec.js --watch",
    "report": "webpack --config example/webpack.config.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/webberig/webpack-html-stats-plugin"
  },
  "keywords": [
    "webpack"
  ],
  "bugs": {
    "url": "https://github.com/webberig/webpack-html-stats-plugin/issues"
  },
  "author": {
    "name": "Mathieu Maes",
    "email": "mathieu@webberig.be",
    "url": "http://www.webberig.be/"
  },
  "license": "MIT",
  "dependencies": {
    "pretty-bytes": "^5.1.0",
    "twig": "^1.12.0"
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "devDependencies": {
    "ava": "^1.2.1",
    "codecov": "^3.1.0",
    "eslint": "^5.4.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "nyc": "^13.2.0",
    "webpack": "^4.29.2",
    "webpack-cli": "^3.2.3"
  }
}