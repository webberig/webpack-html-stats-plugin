{
  "extends": ["airbnb"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "no-unused-vars": [1, { "argsIgnorePattern": "next" }],
    "no-undef": "error",
    "func-names": 0,
    "space-before-function-paren": 0,
    "no-underscore-dangle": 0,
    "indent": ["warn", 4, { "SwitchCase": 1 }],
    "class-methods-use-this": 0
  }
}

